    <div class="col-sm-10">
	    <%= f.text_field :fim_encontro, class:"form-control", type:"date" %>
    </div>
  </div>

<br />
 <div class="form-group">
    <%= f.label :valor , class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
	    <%= f.text_field :valor, class:"form-control", type:"decimal" %>
    </div>
  </div>

<br />
 <div class="form-group">
    <%= f.label :quant_max , class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
	    <%= f.text_field :quant_max, class:"form-control", type:"number" %>
    </div>
  </div>

<br />
 <div class="form-group">
