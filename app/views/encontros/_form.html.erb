  <% end %>
<form class="form-horizontal">
  <div class="form-group">
    <%= f.label :titulo , class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
    	<%= f.text_field :titulo, class:"form-control" %>
    </div>
  </div>
<br />
  <div class="form-group">
    <%= f.label :descricao , class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
	    <%= f.text_area :descricao, class:"form-control" %>
    </div>
  </div>
<br />
  <div class="form-group">
    <%= f.label :tema , class:"col-sm-2 control-label"%>
	<div class="col-sm-10">
	    <%= f.text_field :tema, class:"form-control" %>
	</div>
  </div>
<br />
  <div class="form-group">
    <%= f.label :inicio_inscricoes, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
	    <%= f.text_field :inicio_inscricoes, class:"form-control", type:"date" %>
    </div>
  </div>
<br />

  <div class="form-group">
    <%= f.label :fim_inscricoes , class:"col-sm-2 control-label"%>
    <div class="col-sm-10">
	    <%= f.text_field :fim_inscricoes, class:"form-control", type:"date" %>
    </div>
  </div>
<br />

 <div class="form-group">
    <%= f.label :inicio_encontro , class:"col-sm-2 control-label"%>
