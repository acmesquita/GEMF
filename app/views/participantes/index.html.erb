<p id="notice"><%= notice %></p>

<h1>Participantes</h1>

<%= link_to 'Novo Participante', new_participante_path, class:"btn btn-primary" %>
<br />
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nascimento</th>
      <th>Cpf</th>
      <th>Rg</th>
      <th>Email</th>
      <th>Valor pago</th>
      <th>Tipo pagamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @participantes.each do |participante| %>
      <tr>
        <td><%= participante.nome %></td>
        <td><%= participante.nascimento %></td>
        <td><%= participante.cpf %></td>
        <td><%= participante.rg %></td>
        <td><%= participante.email %></td>
        <td><%= participante.valor_pago %></td>
        <td><%= participante.tipo_pagamento %></td>
        <td><%= link_to 'Show', participante %></td>
        <td><%= link_to 'Edit', edit_participante_path(participante) %></td>
        <td><%= link_to 'Destroy', participante, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
